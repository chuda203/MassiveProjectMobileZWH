<!-- res/drawable/searchview_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#44000000" /> <!-- Warna shadow -->
            <corners android:radius="8dp" /> <!-- Lengkungan sudut -->
        </shape>
    </item>

    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Warna putih -->
            <corners android:radius="8dp" /> <!-- Lengkungan sudut -->
            <stroke
                android:color="#000000"
            android:width="1dp" /> <!-- Lebar border -->
        </shape>
    </item>

</layer-list>
